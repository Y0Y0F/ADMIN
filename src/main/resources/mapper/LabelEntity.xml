<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tima.admin.mapper.LabelEntityMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.tima.admin.entity.LabelEntity">
        <id column="id" property="id"/>
        <result column="no" property="no"/>
        <result column="uid" property="uid"/>
        <result column="label_id" property="labelId"/>
        <result column="describe" property="describe"/>
        <result column="delete_flag" property="deleteFlag"/>
        <result column="version" property="version"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, no, uid, label_id, describe, delete_flag, version, create_time, update_time
    </sql>


    <select id="selectupdateMemberLabel" resultType="com.tima.admin.entity.LabelEntity">
          SELECT
            le.id,
            le.no,
            le.uid,
            le.label_id
          FROM
            label_entity le
            LEFT JOIN label_info li ON li.id = le.label_id
            AND li.delete_flag = '0'
        WHERE
            le.delete_flag = '0'
            AND le.uid = #{uid}
            AND li.attr_id =1
 </select>



    <select id="selectUserByLabel" resultType="com.tima.admin.vo.LabelEntityVO">
        SELECT
            le.id,
            le.NO,
            le.uid,
            le.label_id,
            ubi.no userNo
        FROM
        label_entity le
        LEFT JOIN user_base_information ubi ON ubi.id=le.uid AND ubi.delete_flag='0'
        WHERE
        le.delete_flag='0'
        AND
        le.label_id in
        <foreach item="labelId" index="index" collection="list" open="("
                 separator="," close=")">
            #{labelId}
        </foreach>
        group by le.uid
    </select>

